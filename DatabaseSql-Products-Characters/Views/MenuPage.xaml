<UserControl Background="CadetBlue" x:Class="DatabaseSql_Products_Characters.Views.MenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseSql_Products_Characters.Views"
             
             xmlns:models="clr-namespace:DatabaseSql_Products_Characters.Models"
             xmlns:viewmodels="clr-namespace:DatabaseSql_Products_Characters.ViewModels"
      
            
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Welcome!" FontSize="50" HorizontalAlignment="Center" Margin="0,30,0,0" FontWeight="Bold" />

        <StackPanel VerticalAlignment="Center">
            <Button Command="{Binding MenuChoicePlayer_BtnClickCommand }"  Content="Character Creator" Height="60" Width="250" Background="Black" Foreground="White" Margin="0,0,0,10" FontSize="20"/>
            <Button Command="{Binding MenuChoiceRecords_BtnClickCommand}" Content="Record store inventory " Height="60" Width="250" Background="Black" Foreground="White" FontSize="20"/>
        </StackPanel>

    </Grid>
</UserControl>
